
<div class="left">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div class="thumbnail">
					<%= image_tag @listing.image, :width =>"100%", :height =>"100%" %>	
				</div>
			</div>
			<div class="col-md-6">
				<h3><%= @listing.name %></h3>
				<p><%= number_to_currency(@listing.price, unit: "Rs.") %></p>
				<%= @listing.description %>		
			</div>	
		</div>
	</div>
</div>

<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
