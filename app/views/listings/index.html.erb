<h1>Menus</h1>

<div class="left">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, unit: "Rs.") %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            <% end %>
            <%= link_to 'Show', listing, class: "btn btn-link" %><br>
            <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %><br>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>   
      </div>
    <% end %>
  </div>
</div>


<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>